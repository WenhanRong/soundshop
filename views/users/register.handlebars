<div class="form_container">
  <div>
    {{#each error}}
      <div class="alert alert-danger">{{this}}</div>
    {{/each}}
  </div>
  {{#if hasError}}
    <form class="form" action="/users/register" method="POST">
      <div class="form-group row">
        <label for="userName" class="col-sm-2 col-form-label"><b>Name</b></label><br />
        <div class="col-sm-10">
          <input class="form-control" type="text" {{#if error.userName}} class="error_redFrame" {{/if}} id="userName" name="userName" autocomplete="userName" placeholder="Full Name" value="{{input.userName}}" />
        </div>
      </div>

      <div class="form-group row">
        <label for="email" class="col-sm-2 col-form-label"><b>Email</b></label><br />
        <div class="col-sm-10">
          <input class="form-control" type="text" name="email" {{#if error.email}} class="error_redFrame" {{/if}} value="{{input.email}}" placeholder="Enter Email" /> <br />
        </div>
      </div>

      <div class="form-group row">
        <label for="password" class="col-sm-2 col-form-label"><b>Password</b></label><br />
        <div class="col-sm-10">
          <input class="form-control" type="password" {{#if error.password}} class="error_redFrame" {{/if}} placeholder="Enter Password" name="password" minlength="6" required /><br />
        </div>
      </div>


      <div class="form-group row">
        <label for="passwordVerify" class="col-sm-2 col-form-label"><b>Verify Password</b></label><br />
        <div class="col-sm-10">
          <input class="form-control" type="password" {{#if error.passwordVerify}} class="error_redFrame" {{/if}} placeholder="Verify Password" name="passwordVerify" required /><br />
        </div>
      </div>

      <div class="form-group row">
        <label for="remember" class="col-sm-2 col-form-label"></label><br />
        <div class="col-sm-10">
          <input class="form-control" type="checkbox" checked="checked" name="remember" style="margin-bottom:15px"> Remember me</input>
        </div>
      </div>

      <p>By creating an account you agree to our <a href="#" style="color:dodgerblue">Terms & Privacy</a>.</p>

      <div class="form-group row">
        <div class="col-sm-12">
          <button type="button" class="cancelbtn">Cancel</button>
          <button type="submit" class="signupbtn">Register</button>
        </div>
      </div>
  {{else}}
    <h2>You are signed up successfully. Please click here to <a href="/users/login">Sign In</a>.</h2>
  {{/if}}
  </form>
</div>
