<!-- Will only show if the errors array exists-->
<div class="container">
  <div>
    {{#each error}}
      <div class="alert alert-danger">{{this}}</div>
    {{/each}}
  </div>

  <h2><span>Sign In</span></h2>

  <form class="form" action="/users/login" method="POST">
    <div class="form-group row">
      <label for="email" class="col-sm-2 col-form-label"><b>Email</b></label><br />
      <div class="col-sm-10">
        <input type="text" {{#if errorID.email}} class="error_redFrame" {{/if}} id="email" name="email" autocomplete="email" value="{{data.email}}">
      </div>
    </div>

    <div class="form-group row">
      <label for="password" class="col-sm-2 col-form-label"><b>Password</b></label><br />
      <div class="col-sm-10">
        <input type="password" {{#if errorID.password}} class="error_redFrame" {{/if}} id="password" name="password" autocomplete="password" value="{{data.password}}">
      </div>
    </div>

    <div class="form-group row">
      <label for="helperMessage" class="col-sm-2 col-form-label" /><br />
      <div class="col-sm-10">
        <p class="helperMessage"><a href="">Need help?</a></p>
      </div>
    </div>

    <div class="form-group row">
      <label for="submit" class="col-sm-2 col-form-label" /><br />
      <div class="col-sm-10">
        <input type="submit" id="submit" value="Sign-In">
      </div>
    </div>
  </form>
</div>
