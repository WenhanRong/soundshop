<div class="container">
    {{log product}}
    <form id="edit" action="/products/edit/{{product._id}}?_method=PUT" method="POST">
      <div class="form-group row">
        <label for="name" class="col-sm-2 col-form-label"><b>Name</b></label>
        <div class="col-sm-10">
          <input class="form-control " type="text" {{#if errorID.name}} class="error_redFrame" {{/if}} id="name"
            name="name" autocomplete="name" value={{product.name}} />
        </div>
      </div>
      <div class="form-group row">
        <label for="description" class="col-sm-2 col-form-label"><b>Description</b></label>
        <div class="col-sm-10">
          <input class="form-control" type="text" name="description"
            {{#if errorID.description}} class="error_redFrame" {{/if}}  value={{product.description}} />
        </div>
      </div>
      <div class="form-group row">
        <label for="price" class="col-sm-2 col-form-label"><b>Price</b></label>
        <div class="col-sm-10">
          <input class="form-control" type="number" name="price" {{#if errorID.price}} class="error_redFrame" {{/if}}
              value={{product.price}} />
        </div>
      </div>
      <div class="form-group row">
        <label for="type" class="col-sm-2 col-form-label"><b>Type</b></label>
        <div class="col-sm-10">
          <input type="text" name="type" {{#if errorID.type}} class="error_redFrame" {{/if}}
            value={{product.type}} />
        </div>
      </div>
      <div class="form-group row">
        <label for="subType" class="col-sm-2 col-form-label"><b>SubType</b></label><br />
        <div class="col-sm-10">
          <select class="form-control" form="edit" name="subType" id="subType" style="width: 60%;">
              <option ></option>
              <option value="overtheear" {{#ifeq product.categories.subType "overtheear"}} selected {{/ifeq}}>Overtheear</option>
              <option value="regular" {{#ifeq product.categories.subType "regular"}} selected {{/ifeq}}>Regular</option>
              <option value="earbuds" {{#ifeq product.categories.subType "earbuds"}} selected {{/ifeq}}>Earbuds</option>
              <option value="smart" {{#ifeq product.categories.subType "smart"}} selected {{/ifeq}}>Smart</option>
          </select>
        </div>
      </div>
      <div class="form-group row">
        <label for="brand" class="col-sm-2 col-form-label"><b>Brand</b></label>
        <div class="col-sm-10">
          <select class="form-control" form="edit" name="brand" id="brand" style="width: 60%;">
              <option></option>
              <option value="bose" {{#ifeq product.categories.brand "bose"}} selected {{/ifeq}}>Bose</option>
              <option value="edifier" {{#ifeq product.categories.brand "edifier"}} selected {{/ifeq}}>Edifier</option>
              <option value="generic" {{#ifeq product.categories.brand "generic"}} selected {{/ifeq}}>Generic</option>
              <option value="google" {{#ifeq product.categories.brand "google"}} selected {{/ifeq}}>Google</option>
              <option value="marshal" {{#ifeq product.categories.brand "marshal"}} selected {{/ifeq}}>Marshal</option>
              <option value="monster" {{#ifeq product.categories.brand "monster"}} selected {{/ifeq}}>Monster</option>
              <option value="sennheiser" {{#ifeq product.categories.brand "sennheiser"}} selected {{/ifeq}}>Sennheiser</option>
              <option value="sonos" {{#ifeq product.categories.brand "sonos"}} selected {{/ifeq}}>Sonos</option>
              <option value="sony" {{#ifeq product.categories.brand "sony"}} selected {{/ifeq}}>Sony</option>
              <option value="acy" {{#ifeq product.categories.brand "acy"}} selected {{/ifeq}}>ACY</option>
              <option value="apple" {{#ifeq product.categories.brand "apple"}} selected {{/ifeq}}>Apple</option>
              <option value="amazon" {{#ifeq product.categories.brand "amazon"}} selected {{/ifeq}}>Amazon</option>
              <option value="beats" {{#ifeq product.categories.brand "beats"}} selected {{/ifeq}}>Beats</option>
          </select>
        </div>
      </div>

        <div class="form-group row">
          <label for="isBestSeller" class="col-sm-2 col-form-label"><b>Best Seller?</b></label>
          <div class="col-sm-10">
            <input type="checkbox" id="isBestSeller" name="isBestSeller" {{#if product.isBestSeller}} checked {{/if}} />
          </div>
        </div>

        <div class="form-group row">
          <div class="col-sm-12">
            <button type="button" class="cancelbtn" onclick="goBack()">Cancel</button>
            <button type="submit" class="addbtn">Update Item</button>
          </div>
        </div>
    </form>
</div>
